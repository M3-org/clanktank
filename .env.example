# Voting wallet address for frontend
VITE_VOTING_WALLET_ADDRESS=

# OpenRouter API Key for AI Research
OPENROUTER_API_KEY=

GEMINI_API_KEY=

# GitHub API Token for Repository Analysis  
GITHUB_TOKEN=

# Discord Bot Token (for Phase 2 - Discord Integration)
DISCORD_TOKEN=

# Discord Server/Guild ID for the hackathon
DISCORD_GUILD_ID=

# Discord Channel IDs
