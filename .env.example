DISCORD_VOTING_CHANNEL_ID=

# Optional: Anthropic API Key (if using Claude directly)
ANTHROPIC_API_KEY=

# Optional: Google Sheets Credentials Path
# GOOGLE_SHEETS_CREDENTIALS_PATH=

# Database Configuration
HACKATHON_DB_PATH=/home/jin/repo/clanktank/data/hackathon.db

# Research Configuration
RESEARCH_CACHE_DIR=.cache/research
RESEARCH_CACHE_EXPIRY_HOURS=24

# Judge Configuration
ENABLE_AI_JUDGES=true
AI_MODEL_PROVIDER=openrouter
AI_MODEL_NAME=anthropic/claude-opus-4

# =============================================================================
# JUDGE & RESEARCH SECRETS (JSON-encoded)
# These contain the AI judge prompts, scoring weights, and research evaluation
# criteria. Kept out of source code to prevent submitters from gaming pitches.
# See hackathon/prompts/ for the loading code.
# =============================================================================

# JUDGE_CONFIG: JSON with keys: personas, weights, criteria, score_scale, scoring_task, round2_template
# Example: JUDGE_CONFIG={"personas":{"aimarc":"..."},"weights":{"aimarc":{"innovation":1.2}},...}
JUDGE_CONFIG=

# RESEARCH_CONFIG: JSON with keys: penalty_thresholds, research_prompt_template, github_analysis_prompt_template
# Example: RESEARCH_CONFIG={"penalty_thresholds":{"repo_age_days":30},"research_prompt_template":"..."}
RESEARCH_CONFIG=

# =============================================================================
# YOUTUBE UPLOAD CONFIGURATION
# =============================================================================

# Directory for hackathon recordings
HACKATHON_RECORDINGS_DIR=episodes/recordings/hackathon

# YouTube API credentials path
YOUTUBE_CREDENTIALS_PATH=

# YouTube client secrets path
YOUTUBE_CLIENT_SECRETS_PATH=client_secrets.json

# =============================================================================
# CORS & DEPLOYMENT CONFIGURATION
# =============================================================================

# Allowed CORS origins (comma-separated)
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# =============================================================================
# VOTING & PRIZE POOL CONFIGURATION
# =============================================================================

# Voting limits and weighting
MAX_VOTE_TOKENS=100
MIN_VOTE_AMOUNT=1
VOTE_WEIGHT_MULTIPLIER=3
VOTE_WEIGHT_CAP=10

# Prize pool targets
PRIZE_POOL_TARGET_SOL=10

# =============================================================================
# DEVELOPMENT & RUNTIME SETTINGS
# =============================================================================

# Rate limiting (enabled by default for security, set to false only for local development)
ENABLE_RATE_LIMITING=true

# Environment mode
ENVIRONMENT=development

# Debug mode
DEBUG=false

# Test authentication token
TEST_AUTH_TOKEN=test-dev-token-12345