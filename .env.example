HELIUS_API_KEY=
BIRDEYE_API_KEY=

DISCORD_CLIENT_ID=
DISCORD_CLIENT_SECRET=
DISCORD_REDIRECT_URI="http://localhost:5173/auth/discord/callback"

SUBMISSION_DEADLINE=2025-08-09T23:00:00+00:00

# Submission deadline for frontend (ISO format)
