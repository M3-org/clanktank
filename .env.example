# Required: Prize wallet address for frontend (Vite requires VITE_ prefix)
VITE_PRIZE_WALLET_ADDRESS=2K1reedtyDUQigdaLoHLEyugkH88iVGNE2BQemiGx6xf

# Optional: AI16Z mint address for frontend
VITE_AI16Z_MINT=HeLp6NuQkmYB4pYWo2zYs22mESHXPQYzXbB8n4V98jwC

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Database path (default: data/hackathon.db)
HACKATHON_DB_PATH=data/hackathon.db

# =============================================================================
# API KEYS & EXTERNAL SERVICES
# =============================================================================

# Required: Helius API key for blockchain data
HELIUS_API_KEY=your_helius_api_key_here

# Optional: Birdeye API key for token price data
BIRDEYE_API_KEY=your_birdeye_api_key_here

# OpenRouter API (for AI judges)
OPENROUTER_API_KEY=your_openrouter_api_key

# Discord OAuth (for frontend authentication)
DISCORD_CLIENT_ID=your_discord_client_id
DISCORD_CLIENT_SECRET=your_discord_client_secret

# =============================================================================
# VOTING & PRIZE POOL CONFIGURATION
# =============================================================================

# Voting limits and weighting
MAX_VOTE_TOKENS=100
MIN_VOTE_AMOUNT=1
VOTE_WEIGHT_MULTIPLIER=3
VOTE_WEIGHT_CAP=10

# Prize pool targets
PRIZE_POOL_TARGET_SOL=10
PRIZE_POOL_TARGET_USD=1000

# =============================================================================
# DEVELOPMENT & RUNTIME SETTINGS
# =============================================================================

# Rate limiting (set to false for development)
ENABLE_RATE_LIMITING=false

# Environment mode
ENVIRONMENT=development